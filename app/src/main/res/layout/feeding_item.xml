<?xml version="1.0" encoding="utf-8"?>


<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feeding_item"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="4dp"
    android:elevation="10dp"
    app:cardBackgroundColor="?attr/cardBackgroundColor"
    app:cardCornerRadius="10dp"
    app:layout_constraintTop_toTopOf="parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"

        app:layout_constraintStart_toStartOf="parent">

        <!--            <TextView-->
        <!--                android:id="@+id/tv_day_label"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:padding="8dp"-->
        <!--                android:text="Day:"-->
        <!--                app:layout_constraintStart_toStartOf="parent"-->
        <!--                app:layout_constraintTop_toTopOf="parent" />-->


        <TextView
            android:id="@+id/tv_time_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Time:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_time_label"
            app:layout_constraintStart_toEndOf="@id/tv_time_label"
            app:layout_constraintTop_toTopOf="@id/tv_time_label"
            tools:text="3:45 pm" />

        <TextView
            android:id="@+id/tv_amount_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Amount:"
            app:layout_constraintStart_toStartOf="@id/tv_time_label"
            app:layout_constraintTop_toBottomOf="@id/tv_time_label" />

        <!--            <TextView-->
        <!--                android:id="@+id/tv_day"-->
        <!--                android:layout_width="match_parent"-->
        <!--                android:layout_height="wrap_content"-->
        <!--                android:layout_marginVertical="8dp"-->
        <!--                android:textStyle="bold"-->
        <!--                app:layout_constraintStart_toEndOf="@id/tv_day_label"-->
        <!--                app:layout_constraintTop_toTopOf="@id/tv_day_label"-->
        <!--                tools:text="Sunday" />-->

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/tv_amount_label"
            app:layout_constraintStart_toEndOf="@id/tv_amount_label"
            app:layout_constraintTop_toTopOf="@id/tv_amount_label"
            tools:text="5.5 oz." />


        <TextView
            android:id="@+id/tv_notes_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Notes"
            android:textStyle="bold"
            android:padding="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="@+id/tv_time_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount_label" />


        <TextView
            android:id="@+id/tv_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:maxLines="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tv_notes_label"
            app:layout_constraintTop_toBottomOf="@+id/tv_notes_label"
            app:layout_constraintVertical_weight="1"
            tools:text="had trouble finishing full bottle" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>



